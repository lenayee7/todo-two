<!DOCTYPE html>
<html>
  <head>
    <title>TodoTwo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <%= yield :stylesheets %>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=K2D|Lato|Notable|PT+Sans+Narrow" rel="stylesheet">  

     <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

  </head>

  <body>

    <% if flash[:notice] %>
        <div class="flash"><%= flash[:notice] %></div>
    <% end %>

    <div class='row navbar z-depth-3'>
      <div class='container'>
        <!-- left section -->
          <!-- icon -->
          <!-- title -->
        <div class='col s6'>
          <%= image_tag 'assignment-icon.svg', class: 'nav-icon purple darken-1' %>
          <h1 class='nav-header purple-text darken-1'>TodoTwo</h1>
        </div>
        <div class='col s6 push-s2'>
          <ul>
            <li class='navbar-link'><%=link_to 'Lists', todo_lists_path %></li>
            <li class='navbar-link'><%=link_to 'Create', new_todo_list_path %></li>
            <li class='navbar-link'><a href='#'>About</a></li>
            <li class='navbar-link'><a href='https://github.com/lenayee7/todo-two' target='blank'>Github</a></li>
          </ul>
        </div>
        <!-- right section -->
          <!-- link1 -->
          <!-- link2 ... -->
      </div>
    </div>

    <%= yield :header %>
    <div class='container'>
      <%= yield %>
    </div>
    <%= yield :footer %>

    <%= yield :javascripts %>

  </body>
</html>
